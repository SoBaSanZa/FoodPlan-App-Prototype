<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:windowSoftInputMode="adjustResize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_toolbar"
    tools:context=".Mainlayout">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:baselineAligned="false"
        android:elevation="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10sp"
        android:paddingTop="10sp"
        android:paddingEnd="10sp"
        android:paddingBottom="7sp"
        android:weightSum="4"
        android:id="@+id/navbar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/calenderlayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:paddingStart="5dp"
            android:layout_gravity="center"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/calandericon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/calendar_day"/>

            <TextView
                android:id="@+id/calandertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:text="@string/calender"
                android:textSize="7sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/calender"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/discountlayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:contentDescription="@string/tododdd"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/discounticon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/badge_percent"/>

            <TextView
                android:id="@+id/discounttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:text="@string/discont"
                android:textSize="7sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/discount"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/chatlayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:importantForAccessibility="no"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/chaticon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/comment_alt"/>

            <TextView
                android:id="@+id/chattext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:text="CHAT"
                android:textSize="7sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/chat"/>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/maplayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:contentDescription="@string/dddd"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/mapicon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/land_layer_location"/>

            <TextView
                android:id="@+id/maptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:text="MAP"
                android:textSize="7sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/map"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/acclayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.8"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/accicon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/portrait"/>

            <TextView
                android:id="@+id/acctext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:text="ACCOUNT"
                android:textSize="7sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/acc"/>
        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow"
        app:layout_anchor="@+id/navbar"
        app:layout_anchorGravity="top"
        app:layout_constraintBottom_toTopOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/topshadow"
        app:layout_anchor="@+id/navbar"
        app:layout_anchorGravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background_toolbar"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/mailbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:padding="17dp"
            android:background="@drawable/mailbox" />

        <TextView
            android:id="@+id/pagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/calender"
            android:textSize="25sp" />


    </androidx.appcompat.widget.Toolbar>

        


</androidx.constraintlayout.widget.ConstraintLayout>

